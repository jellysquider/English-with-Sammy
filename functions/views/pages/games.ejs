    <section id="vocabularyGames">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-5">
                    <div class="section_tittle text-center">
                        <h2>Vocabulary Games</h2>
                    </div>
                </div>
            </div>

            <div class="row mb-5">
              <div class="col-lg-8 mx-auto">
                  <!-- Custom rounded search bar with input group -->
                  <form action="">
                    <div class="p-1 bg-light rounded rounded-pill shadow-sm mb-4">
                      <div class="input-group">
                        <input type="search" placeholder="What would you like to practice?" aria-describedby="button-addon1" class="form-control border-0 bg-light">
                        <div class="input-group-append">
                          <button id="button-addon1" type="submit" class="btn btn-link text-primary"><i class="fa fa-search"></i></button>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>

              <div class="filters">
                  <ul>
                      <li class="active" data-filter="*">All</li>
                      <li data-filter=".matchingPairs">Matching Pairs</li>
                      <li data-filter=".crossword">Crossword</li>
                      <li data-filter=".wordSearch">Word Search</li>
                  </ul>
              </div>

              <div class="row grid">
                <a href="/matchingPairs">
                  <div class="card px-0 mt-4 all matchingPairs">
                    <img class="card-img-top" src="img/fruits.jpg" alt="Card image cap">
                    <div class="card-body">
                      <h5 class="card-title">Vegetables</h5>
                      <p class="card-text"><small class="text-muted">Matching Pairs</small></p>
                      <p class="card-text">Learn vocabulary related to vegetables such as a carrot, a bell pepper, a cucumber, etc.</p>
                    </div>
                  </div>
                </a>
                <a href="/crossword">
                  <div class="card px-0 mt-4 all crossword">
                    <img class="card-img-top" src="img/fruits2.jpg" alt="Card image cap">
                    <div class="card-body">
                      <h5 class="card-title">Fruits</h5>
                      <p class="card-text"><small class="text-muted">Crossword</small></p>
                      <p class="card-text">Learn words such as a banana, a raspberry, a watermelon, an orange, etc.</p>
                    </div>
                  </div>
                </a>
                <a href="/wordSearch">
                  <div class="card px-0 mt-4 all wordSearch">
                    <img class="card-img-top" src="img/deer.jpg" alt="Card image cap">
                    <div class="card-body">
                      <h5 class="card-title">Animals</h5>
                      <p class="card-text"><small class="text-muted">Word Search</small></p>
                      <p class="card-text">Learn words related to animals such as a dog, a cat, a deer, a lion, etc.</p>
                    </div>
                  </div>
                </a>
                <a href="/matchingPairs">
                  <div class="card px-0 mt-4 all matchingPairs">
                    <img class="card-img-top" src="img/clothing.jpg" alt="Card image cap">
                    <div class="card-body">
                      <h5 class="card-title">Clothing</h5>
                      <p class="card-text"><small class="text-muted">Matching Pairs</small></p>
                      <p class="card-text">Learn words related to clothing such as a hat, pants, a T-shirt, a coat, etc.</p>
                    </div>
                  </div>
                </a>
              </div>

              </div>

    </section>
